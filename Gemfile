  gem 'sqlite3'

  # Test environment dependencies
  gem 'activerecord', '~> 3.2.0'

  # Testing related gems
  gem 'rspec'
  gem 'autotest-growl'
  gem 'autotest-fsevent'
  gem 'shoulda-matchers'
  gem 'ZenTest'
  gem 'factory_girl'

  gem 'rack'
end
